<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
									 namespace="Course.Models"
									 assembly="Course"
									 >
	<class name="User" table="Users" discriminator-value="User">
		<id name="Id">
			<generator class="native"/>
		</id>
		<discriminator type="System.String" column="Type"/>
		<property name="Name" unique="true"/>
		<property name="Email"/>
		<bag name="Parts" inverse="true">
			<key column="`User`"/>
			<one-to-many class="Part"/>
		</bag>
		<set name="Groups" table="UsersToTables" lazy="extra">
			<key column="UserId"/>
			<many-to-many column="GroupId" class="Group"/>
		</set>
		
		<subclass name="Admin" discriminator-value="Admin">
			<property name="Password" />
		</subclass>
	</class>


</hibernate-mapping>
